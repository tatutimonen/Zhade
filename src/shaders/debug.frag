#version 460

//------------------------------------------------------------------------
// Outputs.

layout (location = 0) out vec4 fragOut;

//------------------------------------------------------------------------
// Inputs from previous pipeline stages.

in VERT_OUT {
    vec2 tex;
} FragIn;

//------------------------------------------------------------------------
// Uniforms.

uniform sampler2D u_colorTexture;

//------------------------------------------------------------------------

void main()
{
    fragOut = texture(u_colorTexture, FragIn.tex);
}

//------------------------------------------------------------------------